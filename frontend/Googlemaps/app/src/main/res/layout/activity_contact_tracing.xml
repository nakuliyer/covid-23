<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_centerHorizontal="false"
  android:layout_centerInParent="false"
  android:layout_centerVertical="false"
  android:orientation="vertical">

    <FrameLayout
      android:id="@+id/settings"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

        <TextView
          android:id="@+id/ct_location_services"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="400dp"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="Location Services:"
          android:textSize="18dp" />
        <TextView
          android:id="@+id/ct_compromised"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="430dp"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="Likelihood of Infection:"
          android:textSize="18dp" />
        <TextView
          android:id="@+id/ct_you_are_infected"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="430dp"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="You are infected. Anyone who you have been near in the past 14 days will have a raised likelihood of infection."
          android:textSize="18dp"
          android:visibility="gone" />
        <TextView
          android:id="@+id/ct_location_status"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="400dp"
          android:layout_marginStart="190dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="190dp"
          android:layout_marginRight="30dp"
          android:text="Enabled"
          android:textColor="#4CAF50"
          android:textSize="18dp" />
        <TextView
          android:id="@+id/ct_compromised_status"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="430dp"
          android:layout_marginStart="230dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="230dp"
          android:layout_marginRight="30dp"
          android:text="High"
          android:textColor="#E91E63"
          android:textSize="18dp" />
        <ImageView
          android:id="@+id/ct_image"
          android:layout_width="171dp"
          android:layout_height="168dp"
          android:layout_marginTop="60dp"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_gravity="center_horizontal"
          app:srcCompat="@drawable/contact_tracing" />
        <TextView
          android:id="@+id/ct_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_marginStart="50dp"
          android:layout_marginEnd="50dp"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:fontFamily="@font/muli_black"
          android:gravity="center_horizontal"
          android:text="Contact Tracing"
          android:textSize="24dp" />
        <TextView
          android:id="@+id/ct_how_it_works_title"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="220dp"
          android:layout_marginStart="30dp"
          android:layout_marginLeft="30dp"
          android:text="How it Works:"
          android:textSize="16dp" />
        <TextView
          android:id="@+id/ct_how_it_works"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="250dp"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="@string/contact_tracing" />
        <TextView
          android:id="@+id/ct_status_title"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="370dp"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:gravity="center_horizontal"
          android:text="Status"
          android:textSize="18dp" />
        <Button
          android:id="@+id/ct_covid_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="520dp"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:background="@android:color/holo_red_dark"
          android:fontFamily="@font/muli_black"
          android:text="Report Self Infection"
          android:textColor="@android:color/white" />
        <Button
          android:id="@+id/ct_recovered_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="520dp"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:background="#C4C6FFC4"
          android:fontFamily="@font/muli_black"
          android:text="Report Recovery"
          android:textColor="@android:color/white"
          android:visibility="gone" />
    </FrameLayout>

</LinearLayout>